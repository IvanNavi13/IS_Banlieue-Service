<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText android:id="@+id/etReglocalNombre"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del local"
                android:gravity="center"
                android:inputType="textCapSentences|textAutoCorrect"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/cajasTexto"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giro del negocio:"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
            <Spinner android:id="@+id/spReglocalGiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/banCyan"
            />

            <EditText android:id="@+id/etReglocalDireccion"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="DirecciÃ³n"
                android:gravity="center"
                android:inputType="text|textMultiLine|textCapSentences"
                android:textColor="@color/white"
                android:theme="@style/cajasTexto"
                android:textSize="20sp"
                />

            <!--Hora de apertura-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de apertura=>   "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />

                <Spinner android:id="@+id/spHoraAper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/banCyan"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":   "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
                <Spinner android:id="@+id/spMinAper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/banCyan"
                    />
            </LinearLayout>

            <!--Hora de cierre-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de cierre=>   "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />

                <Spinner android:id="@+id/spHoraCierre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/banCyan"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":   "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
                <Spinner android:id="@+id/spMinCierre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/banCyan"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                >
                <ImageView
                    android:id="@+id/dispImgLugar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/ic_menu_gallery" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!--Etiqueta de relleno-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        />
                    <Button
                        android:id="@+id/btnCargarImagen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/banCyan"
                        android:text="Cargar"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <Button android:id="@+id/btnRegistrar"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRAR"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:backgroundTint="@color/banCyan"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>